<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/splash"
    android:layout_height="match_parent"
    tools:context=".first">
    <include
        android:layout_alignParentTop="true"
        layout="@layout/tool"
        android:id="@+id/tool"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"/>
    <ScrollView
        android:layout_below="@id/tool"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:background="@drawable/al"
                    android:id="@+id/rr1"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv1"
                        android:textColor="#fff"
                        android:layout_marginTop="15dp"
                        android:textSize="18dp"
                        android:layout_marginLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="AU Calculator"/>
                    <RelativeLayout
                        android:layout_below="@+id/tv1"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:id="@+id/gpa"
                            android:gravity="center_vertical"
                            android:paddingLeft="20dp"
                            android:outlineSpotShadowColor="#fff"
                            android:outlineAmbientShadowColor="#fff"
                            android:foreground="?attr/selectableItemBackgroundBorderless"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/ff"
                            android:layout_width="match_parent"
                            android:layout_height="140dp">
                            <TextView
                                android:id="@+id/t1"
                                android:layout_width="wrap_content"
                                android:textColor="#ffe77d"
                                android:textStyle="bold"
                                android:textSize="20dp"
                                android:layout_height="wrap_content"
                                android:text="G P A"/>
                            <TextView
                                android:layout_below="@+id/t1"
                                android:id="@+id/t2"
                                android:layout_width="wrap_content"
                                android:textColor="#fff"
                                android:textSize="20dp"
                                android:layout_height="wrap_content"
                                android:text="C a l c u l a t o r"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:foreground="?attr/selectableItemBackgroundBorderless"
                            android:id="@+id/cgpa"
                            android:paddingLeft="20dp"
                            android:gravity="center_vertical"
                            android:outlineSpotShadowColor="#fff"
                            android:outlineAmbientShadowColor="#fff"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/n"
                            android:layout_below="@id/gpa"
                            android:layout_width="match_parent"
                            android:layout_height="140dp">
                            <TextView
                                android:id="@+id/t3"
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:textColor="#ffe77d"
                                android:textSize="20dp"
                                android:layout_height="wrap_content"
                                android:text="C G P A"/>
                            <TextView
                                android:layout_below="@+id/t3"
                                android:id="@+id/t4"
                                android:layout_width="wrap_content"
                                android:textColor="#fff"
                                android:textSize="20dp"
                                android:layout_height="wrap_content"
                                android:text="C a l c u l a t o r"/>

                        </RelativeLayout>
                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/dd"
                    android:layout_below="@+id/rr1"
                    android:background="@drawable/al"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv3"
                        android:textColor="#fff"
                        android:layout_marginTop="15dp"
                        android:textSize="18dp"
                        android:layout_marginLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="Grade Reference"/>
                    <RelativeLayout
                        android:layout_below="@+id/tv3"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:id="@+id/grade"
                            android:gravity="center_vertical"
                            android:paddingLeft="20dp"
                            android:outlineSpotShadowColor="#fff"
                            android:outlineAmbientShadowColor="#fff"
                            android:foreground="?attr/selectableItemBackgroundBorderless"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/fff"
                            android:layout_width="match_parent"
                            android:layout_height="140dp">
                            <TextView
                                android:id="@+id/t44"
                                android:layout_width="wrap_content"
                                android:textColor="#fff"
                                android:textSize="18dp"
                                android:layout_height="wrap_content"
                                android:text="O = 91 - 100    A+ = 81 - 90"/>
                            <TextView
                                android:id="@+id/t5"
                                android:layout_below="@+id/t44"
                                android:layout_width="wrap_content"
                                android:textColor="#fff"
                                android:textSize="18dp"
                                android:layout_height="wrap_content"
                                android:text="A = 71 -  80     B+ = 61 - 70"/>
                            <TextView
                                android:id="@+id/t6"
                                android:layout_below="@+id/t5"
                                android:layout_width="wrap_content"
                                android:textColor="#fff"
                                android:textSize="18dp"
                                android:layout_height="wrap_content"
                                android:text="B = 51 -  60     RA = below 50 "/>

                        </RelativeLayout>
                    </RelativeLayout>

                </RelativeLayout>

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>




</RelativeLayout>